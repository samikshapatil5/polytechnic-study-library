<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFEFE"
    tools:context=".signup">


    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="672dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="22dp"
        android:layout_x="290dp"
        android:layout_y="138dp"
        android:background="@android:drawable/alert_light_frame"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pass"
            android:layout_width="284dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="273dp"
            android:layout_x="16dp"
            android:layout_y="27dp"
            android:background="@drawable/rectangle"
            android:drawableLeft="@drawable/padlock"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textWebPassword"
            android:paddingLeft="20dp"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="210dp"
            android:layout_height="44dp"
            android:layout_above="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="138dp"
            android:layout_x="80dp"
            android:layout_y="33dp"
            android:fontFamily="@font/andika"
            android:gravity="center"
            android:shadowColor="#100F0F"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Welcome Back!"
            android:textAlignment="textStart"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="222dp"
            android:layout_height="57dp"
            android:layout_above="@+id/email"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="78dp"
            android:layout_x="109dp"
            android:layout_y="63dp"
            android:text="Please Sign Up"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="299dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="353dp"
            android:layout_x="16dp"
            android:layout_y="246dp"
            android:background="@drawable/rectangle"
            android:drawableLeft="@drawable/email2"
            android:elevation="20dp"
            android:ems="10"
            android:hint=" Email"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:text="" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="293dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="491dp"
            android:layout_marginEnd="28dp"
            android:layout_x="44dp"
            android:layout_y="512dp"
            android:text="Already have any account? Login-in"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="399dp"
            android:layout_marginEnd="84dp"
            android:layout_x="80dp"
            android:layout_y="428dp"
            android:backgroundTint="#C56060"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Sign Up"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:elevation="50dp"
            app:rippleColor="#BDBDBD"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/username"
            android:layout_width="284dp"
            android:layout_height="59dp"
            android:layout_above="@+id/materialButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="433dp"
            android:layout_x="16dp"
            android:layout_y="165dp"
            android:background="@drawable/rectangle"
            android:drawableLeft="@drawable/user"
            android:elevation="20dp"
            android:ems="10"
            android:hint=" Username"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:text="" />


    </RelativeLayout>


</RelativeLayout>