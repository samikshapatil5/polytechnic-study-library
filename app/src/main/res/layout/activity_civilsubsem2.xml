<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".civilsubsem2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="370dp"
        android:layout_height="92dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="620dp"
        android:alpha="0.8"
        android:fontFamily="monospace"

        android:text="continue Reading ...."
        android:textColor="#6C062E"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="332dp"
        android:layout_height="55dp"

        android:layout_marginTop="272dp"
        app:cardBackgroundColor="#FBDDD3"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="TextSizeCheck">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:paddingStart="10dp"
            android:text="Applied science"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="270dp"
            android:backgroundTint="#FBDDD3"
            android:paddingTop="1dp"
            android:text=">"
            android:id="@+id/science"
            android:textColor="#070707"
            android:textSize="28sp"
            tools:ignore="HardcodedText">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="332dp"
        android:layout_height="65dp"

        android:layout_marginTop="344dp"
        app:cardBackgroundColor="#FBDDD3"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="TextSizeCheck">

        <TextView
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:paddingStart="10dp"
            android:text="Apply Mechanics"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_marginStart="270dp"
            android:backgroundTint="#FBDDD3"
            android:paddingTop="1dp"
            android:text=">"
            android:id="@+id/construction"
            android:textColor="#070707"
            android:textSize="28sp"
            tools:ignore="HardcodedText">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:layout_marginTop="426dp"
        app:cardBackgroundColor="#FBDDD3"
        app:cardCornerRadius="10dp"

        app:cardElevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="9dp"
            android:paddingStart="10dp"
            android:text="Civil engineering Workshop
            and practice"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextSizeCheck" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="270dp"
            android:backgroundTint="#FBDDD3"
            android:paddingTop="1dp"
            android:text=">"
            android:id="@+id/survey"
            android:textColor="#070707"
            android:textSize="28sp"
            tools:ignore="HardcodedText">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="332dp"
        android:layout_height="55dp"

        android:layout_marginTop="202dp"
        app:cardBackgroundColor="#FBDDD3"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:paddingStart="10dp"
            android:text="Applied Mathematics"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextSizeCheck" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="270dp"
            android:backgroundTint="#FBDDD3"
            android:paddingTop="1dp"
            android:text=">"
            android:id="@+id/amath"
            android:textColor="#070707"
            android:textSize="28sp"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText">

        </com.google.android.material.button.MaterialButton>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="284dp"
        android:layout_height="85dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/charm_bold"
        android:gravity="center"
        android:text="Polytechnic's Subjects"
        android:textColor="#320B42"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />

    <Button
        android:id="@+id/arrow"
        android:layout_width="64dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/arrow1"
        android:text="."

        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>